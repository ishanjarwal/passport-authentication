{
  "compilerOptions": {
    "target": "ES2020", // Output modern JS
    "module": "CommonJS", // Required for Node.js
    "rootDir": "./src", // Source files location
    "outDir": "./dist", // Compiled output
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows default imports from CommonJS
    "moduleResolution": "node", // Resolve modules like Node.js
    "forceConsistentCasingInFileNames": true, // Prevent case-mismatch errors
    "skipLibCheck": true, // Skip checking .d.ts files
    "resolveJsonModule": true, // Allow importing JSON files
    "noImplicitAny": true, // Disallow implicit any types
    "noEmitOnError": true, // Do not emit output if there are type errors
    "declaration": false // Set to true if you want .d.ts files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
